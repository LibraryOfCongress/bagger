<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<bean id="jbpmDataSource" class="org.springframework.jdbc.datasource.SingleConnectionDataSource">
		<property name="driverClassName" value= "org.hsqldb.jdbcDriver" />
		<property name="url" value="jdbc:hsqldb:mem:jbpm" />
		<property name="username" value="sa" />
		<property name="suppressClose" value="true" />
	</bean>
	
	<bean id="jbpmSessionFactory" parent="abstractJbpmSessionFactory">
		<property name="dataSource" ref="jbpmDataSource" />
		<property name="hibernateProperties">
   			<value>
     			hibernate.dialect=org.hibernate.dialect.HSQLDialect
     			hibernate.cache.provider_class=org.hibernate.cache.HashtableCacheProvider
   			</value>
   		</property>
   		<property name="schemaUpdate" value="true" />
	</bean>
	
</beans>